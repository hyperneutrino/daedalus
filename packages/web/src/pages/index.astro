---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <h1 id="header">welcome to daedalus</h1>
    <h2 id="subheader">the all-in-one discord bot for all of your needs</h2>
</Layout>

<style>
    #header {
        font-weight: normal;
        font-size: calc(20pt + 1vw);
        text-align: center;
    }

    #subheader {
        font-weight: normal;
        font-size: calc(12pt + 0.25vw);
        text-align: center;
        color: var(--text-secondary);
    }
</style>
