---
import { env } from "utils";

const DISCORD_ENDPOINT = (path: string, state: string) =>
    `${env("DISCORD_API")}/oauth2/authorize?${new URLSearchParams({
        client_id: env("DISCORD_CLIENT_ID"),
        redirect_uri: `${env("DOMAIN")}/auth/callback`,
        response_type: "code",
        scope: "identify guilds",
        state: state + path,
    })}`;

const state = String.fromCharCode(...new Array(32).fill(0).map(() => Math.floor(Math.random() * 94) + 33));
const headers = new Headers({ Location: DISCORD_ENDPOINT(Astro.url.searchParams.get("redirect") ?? "/", state) });
Astro.cookies.set("state", state, { path: "/", httpOnly: true, sameSite: "lax", expires: new Date(Date.now() + 10 * 60 * 1000) });
return new Response(null, { headers, status: 303 });
